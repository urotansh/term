$("#note").html("<%= j(render 'note', {note: @note, note_comment: @note_comment}) %>");
$("#edit").html("<%= j(link_to '編集する', edit_note_path(@note.id), class: "btn btn-success", remote: true, data: {"turbolinks" => false}) if @note.user == current_user %>");
$("#destroy").html("<%= j(link_to '削除する', note_path(@note.id), class: "btn btn-danger", method: :delete, remote: true, data: {"turbolinks" => false}) if @note.user == current_user %>");
