<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <div class="shadow-lg p-1 shadow-lg rounded">
        <%= image_tag @user.get_image(100, 100), class: "d-block mx-auto border" %>
        <p class="text-center"><%= @user.name %></p>
        <% if (@user == current_user) && !(@user.name == "guestuser") %>
          <%= link_to "ユーザー情報を編集する", settings_profile_users_path, class: "btn btn-outline-secondary btn-sm d-block mx-auto" %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <% if @user == current_user %>
          <div id="new" style="width: 100px;">
            <%= link_to "新規投稿", new_note_path, class: "btn btn-primary btn-sm", remote: true %>
          </div>
        <% end %>
        <div id="index" style="width: 100px;">
          <%= link_to "投稿一覧", notes_path(name: @user.name), class: "btn btn-dark btn-sm", remote: true %>
        </div>
        <div id="favorite_index" style="width: 110px;">
          <%= link_to "いいね一覧", notes_path(name: @user.name, favorite: true), class: "btn btn-warning btn-sm text-white", remote: true %>
        </div>
      </div>
      <ul>
        <li>
          <%= link_to "フォルダ", notes_path(name: @user.name), remote: true %>
          <ul>
            <% @notes.each do |note| %>
              <li>
                <%= link_to note.title, note_path(note), remote: true %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>

    <div class="offset-md-1 col-md-8">
      <div id="edit" class="text-left"></div>
      <div id="destroy" class="text-right"></div>
      <div id="note">
        <% if !@notes_index.nil? %>
          <h2>投稿一覧</h2>
          <%= render "public/notes/notes", notes: @notes_index %>
        <% end %>
      </div>
    </div>
  </div>
</div>
